# Database (PostgreSQL Local)
# Ajustá el password 'root' por el que pongas en la instalación
DATABASE_URL=postgresql://postgres:root@localhost:5432/siba-dev?schema=public

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API
API_PORT=3001
API_HOST=localhost

# Frontend
VITE_API_URL=http://localhost:3001

# Storage (Local por ahora, MinIO requiere Docker)
# Si no hay Docker, usaremos fs local (hay que implementar el adapter)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# MinIO (Opcional, si instalás Docker)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_BUCKET=siba

# Node
NODE_ENV=development
